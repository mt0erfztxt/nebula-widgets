@require './vars';


// --
// -- Fonts---------------------------------------------------------------------
// --

@import url('https://fonts.googleapis.com/css?family=Droid+Sans');


// --
// -- Styles -------------------------------------------------------------------
// --

// http://www.paulirish.com/2012/box-sizing-border-box-ftw/
*, *:before, *:after
    box-sizing: inherit;


html
    background-color: $g_color_background;
    box-sizing: border-box;
    height: 100%;


body
    background-color: $g_color_background;
    font-family: $g_font_family;
    font-size: $g_font_size;
    height: 100%;
    // overflow-y: scroll;


hr
    background-color: $g_color_primary_text--disabled;
    border: 0;
    height: 1px;
    margin: 8px 0;


@require './widgets';
