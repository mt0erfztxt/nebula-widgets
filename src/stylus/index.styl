// --
// -- Modules ------------------------------------------------------------------
// --

@import 'axis';
@import 'jeet';


// Reset/Normalize default styles across browsers.
normalize-css();
base();


// --
// -- Vars ---------------------------------------------------------------------
// --

@require './vars';
@require './vendor';


// --
// -- Fonts---------------------------------------------------------------------
// --

@import url('https://fonts.googleapis.com/css?family=Droid+Sans');


// --
// -- Styles -------------------------------------------------------------------
// --

// http://www.paulirish.com/2012/box-sizing-border-box-ftw/
*, *:before, *:after
    box-sizing: inherit;


html
    background-color: $g_color_background;
    box-sizing: border-box;
    height: 100%;


body
    background-color: $g_color_background;
    font-family: $g_font_family;
    font-size: $g_font_size;
    height: 100%;
    overflow-y: scroll;


@require './base';
@require './mixins';
@require './icons';
@require './widgets';
