.markdown
    line-height: 1.68;


    a
        color: inherit;


    code
        background-color: darken($g_color_background, 8%);
        border: 1px solid mix($g_color_primary_text, $g_color_background, 10%);
        border-radius: 2px;
        font-size: 13px;
        padding: 1px 4px;


    h1, h2, h3, h4, h5, h6
        color: $g_color_primary_text--darker;

    
    h1
        margin: 32px 0;


    h2
        margin: 24px 0;


    h3
        margin: 16px 0;


    h4, h5, h6
        margin: 8px 0;


    p
        margin: 16px 0;


        code
            padding: 2px 4px 2px 2px;


    pre
        margin: 12px 0;


        code
            background-color: darken($g_color_background, 8%);
            border: 1px solid mix($g_color_primary_text, $g_color_background, 10%);
            border-radius: 2px;
            line-height: normal;
            padding: 16px;


    ul
        margin: 16px 0;


        ul
            margin: 0;
