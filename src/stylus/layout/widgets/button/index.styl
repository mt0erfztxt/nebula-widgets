.nw-button
    background-color: transparent;
    border: 1px solid $g_color_primary_text;
    color: $g_color_primary_text;
    display: inline-block;
    height: 32px; // TODO Extract to var?
    line-height: 32px; // TODO Use it or not?
    outline: none;
    margin-right: 8px;
    padding: 0 24px;
    text-decoration: none;
    text-transform: uppercase;
    transition: color .3s;

    &:last-child
        margin-right: 0;


    &--disabled
        border-color: $g_color_primary_text--disabled;
        color: $g_color_primary_text--disabled;


    &--flat
        border-color: transparent;
        padding-left: 16px;
        padding-right: 16px;

        &:hover
            color: $g_color_primary_text--active;


    // Must be defined before `--primary` or styles would broke.
    &--secondary
        border-style: dashed;
        color: $g_color_primary_text;


    &--primary
        background-color: $g_color_accent;
        border-color: $g_color_accent;
        color: $g_color_primary_text--active;
        text-shadow: -1px 1px 0 shade($g_color_accent, 9%);


    &--primary&--secondary
        border-color: alpha($g_color_primary_text--active, 0.72);
