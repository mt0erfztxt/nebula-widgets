nw-formField(bem = 'nw-formField')
    display: flex;
    flex-direction: column;
    margin-bottom: 24px;


    &__input
        //


    &__label
        color: $g_color_primary_text;
        display: block;
        padding-bottom: 10px;


    &__label-aux
        color: $g_color_primary_text--darker;
        display: inline;
        font-size: 11px;
        padding-left: 3px;


    &--inline
        flex-direction: row;


    &--inline &__input
        flex: auto;


    &--inline &__label
        flex: none;
        padding-bottom: 0;
        padding-right: 16px;


    &--required &__label:after
        color: $g_color_primary_text--error;
        content: '*';
        display: inline-block;
        padding-left: 1px;


.nw-formField
    nw-formField: ''
