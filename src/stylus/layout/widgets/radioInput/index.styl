.nw-radioInput
    &__label
        cursor: pointer;
        display: inline-block;
        transition: color .3s;

        &:hover
            // color: $group-input-hovered-item-color;


    &--checked
        // color: $group-input-hovered-item-color;

    &--checked &__label
        // cursor: default;


    &--disabled
        opacity: 0.32;

    &--disabled &__label
        cursor: default;
        transition: none;

        &:hover
            color: inherit;


    &--labelShrinked
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;


    &--widget_button
        // 

    &--widget_button&--checked
        // background-color: $group-input-active-item-background-color;
        // box-shadow: inset 0 0 2px alpha(#000, .15);   // TODO: Extract

    &--widget_button &__label
        display: block;
        padding: 0 8px;

        input
            display: none;


    &--widget_icon
        margin-bottom: 0;

    &--widget_icon &__label
        display: inline-block;
        line-height: 20px;
        padding-left: 26px;
        position: relative;
        vertical-align: middle;

        input
            display: none;

        &:before
            sprite($icon_radio);
            content: " ";
            left: 0;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);

    &--widget_icon&--checked &__label:before
        sprite($icon_radio_checked);
