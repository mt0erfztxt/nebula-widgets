$tabs-borderColor            = rgb(96, 102, 111);
$tabs-color                  = $tabs-borderColor;
$tabs-color--active          = $g_color_primary_text;
$tabs-color--highlighted     = rgb(52, 61, 74);

$tabs_tab-color              = rgb(100, 107, 117);


$tabs_button-backgroundColor            = $tabs-color--highlighted;
$tabs_button-backgroundColor--disabled  = mix($tabs_button-backgroundColor, $tabs-color-background, 45%);
$tabs_button-backgroundColor--highlited = alpha($tabs-borderColor, 0.36);
$tabs_button-borderColor                = $tabs-borderColor;
$tabs_button-color                      = $tabs_tab-color;
$tabs_button--active-color              = $tabs-color--active;



.nw-tabs
    // background-color: $tabs-color-background;
    display: flex;
    flex-direction: column;
    position: relative;


    &__body
        // border: solid $tabs-color-foreground;
        border: solid $tabs-borderColor;
        border-bottom-left-radius: 2px;
        border-bottom-right-radius: 2px;
        border-width: 0 1px 1px 1px;
        position: relative;


    // Button rendered using <BUTTON> or <A> tags.
    &__button
        color: $tabs_tab-color;
        font-size: $tabs-tab-head-icon-fontSize--size-n - 10;
        display: flex;
        text-align: center;


    &__button-inner
        background-color: transparent;
        border: 1px dashed $tabs_button-borderColor;
        border-radius: 2px;
        outline: none;
        width: 100%;


    &__button--active &__button-inner
        background-color: $tabs_button-backgroundColor--highlited;
        color: $tabs_button--active-color;


    &__button--disabled &__button-inner
        border-color: $tabs_button-backgroundColor--disabled;
        color: @border-color;


    &__button:not(&__button--disabled) &__button-inner:hover
        background-color: $tabs_button-backgroundColor--highlited;
        color: $tabs_button--active-color;


    &__button--rotated &__button-inner
        transform: rotate(180deg);


    &__buttons
        display: flex;


    &__head
        // border: solid $tabs-color-foreground;
        border: solid $tabs-borderColor;
        border-width: 0 0 1px 0;
        display: flex;
        font-size: $tabs-head-fontSize--size-n;
        text-transform: uppercase;
        width: 100%;


    &__list
        display: flex;


    &__listContainer
        display: flex;


    // Tab rendered using <BUTTON> or <A> tags.
    &__tab-head
        align-items: stretch;
        border: solid transparent;
        color: $tabs-color;
        cursor: pointer;
        display: flex;
        font-weight: bold;
        outline: none;
        position: relative;
        text-decoration: none;

    &__tab-head--active
        border-color: $tabs-borderColor;
        color: $tabs-color-text;

    &__tab-head--active &__tab-head-spacer
        background-color: $tabs-color-background;

    &__tab-head--disabled
        color: $tabs-tab-head--disabled--color;
        cursor: default;


    &__tab-head-icon
        font-size: $tabs-tab-head-icon-fontSize--size-n - 10;

        &:first-child
            padding-left: 16px;

        &:first-child:not(:last-child)
            padding-right: 8px;

        &:last-child
            padding-right: 16px;


    &__tab-head-inner
        align-items: center;
        display: flex;


    &__tab-head-spacer
        position: absolute;
        z-index: 10;


    &__tab-head-text
        // color: inherit;
        font-size: $tabs-tab-head-text-fontsize--size-n;
        text-decoration: none;

        &:first-child
            padding-left: 16px;

        &:last-child
            padding-right: 16px;


    &__tab-body
        // background-color: $tabs-color-foreground;
        height: 0;
        opacity: 0;
        overflow: hidden;
        // transition: opacity 200ms;


    &__tab-body--active
